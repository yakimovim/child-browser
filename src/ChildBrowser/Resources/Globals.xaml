<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ChildBrowser.Resources"
                    xmlns:v="clr-namespace:System;assembly=System.Runtime">
    <v:Double x:Key="FontSize">16</v:Double>
    <Style x:Key="ButtonWithImage" TargetType="Button">
        <Setter Property="Width" Value="28" />
        <Setter Property="Height" Value="28" />
    </Style>
    <Style x:Key="Image24" TargetType="Image">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
    </Style>
    <Style x:Key="Image16" TargetType="Image">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
    </Style>
    <Style x:Key="DialogButton" TargetType="Button">
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style x:Key="InputTitles" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="5" />
    </Style>
</ResourceDictionary>